<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.parivartan.medico.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:orientation="vertical"
            android:background="#d6eac2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medicine Recommendation"
                android:textStyle="bold"
                android:padding="10dp"
                android:textSize="15sp"
                android:gravity="center"/>

            <Spinner
                android:layout_width="match_parent"
                android:padding="5dp"
                android:id="@+id/spinner_types"
                android:layout_height="wrap_content">

            </Spinner>

            <EditText
                android:layout_width="match_parent"
                android:hint="Medicine Name"
                android:layout_weight="2"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:id="@+id/et_medicine_name"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dosage"
                android:gravity="center_horizontal"
                android:id="@+id/et_dosage"/>


            <Button
                android:layout_width="wrap_content"
                android:text="Analyse"
                android:id="@+id/bt_analyse"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="#e1e1e1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Results"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"/>

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/list_view"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>
